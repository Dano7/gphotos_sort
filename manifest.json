{
    "name": "Google Photos Sorter By Name",
    "version": "0.16",
    "manifest_version": 2,
    "description": "Sort album by name for Google photos.",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "icons":{
        "16" : "i16.png",
        "48" : "i48.png",
        "128" : "i128.png"
    },
    "content_scripts":[
        {
            "matches": [
                "https://photos.google.com/*",
                "https://photos.google.com/album/*",
                "https://photos.google.com/share/*",
                "https://photos.google.com/u/*/album/*",
                "https://photos.google.com/u/*/share/*"
            ],
            "js": [
                "lib/rq.js",
                "lib/numRep.js",
                "lib/send_msg.js",
                "lib/Gui.js",
                "lib/Album.js",
                "lib/Sorter.js",
                "content.js"
            ]
        }
    ],
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16" : "i16.png",
            "48" : "i48.png",
            "128" : "i128.png"
        },
        "default_title": "Google Photos Album Sort"
    },
    "permissions": [
        "tabs"
    ]
}
